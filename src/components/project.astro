---
export type Props = {
  title: string;
  description: string;
  img: string;
  url: string;
};

const { title, description, img, url } = Astro.props;
---

<div class="card lg:card-side bg-base-100 shadow-xl mt-10">
  <div class="card-body w-2/3">
    <h1 class="card-title">{title}</h1>
    <p>{description}</p>
  </div>
  <figure class="h-fit">
    <a href={url}>
      <img src={`projects/${img}`} decoding="async" loading="lazy" alt={title}>
    </a>
  </figure>
</div>
