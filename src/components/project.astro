---
import { Image } from 'astro:assets';

export type Props = {
  title: string;
  description: string;
  img: string;
  url: string;
};

const { title, description, img, url } = Astro.props;

const imgSrc = await import(`../assets/projects/${img}`);

---

<div class="card lg:card-side bg-base-100 shadow-xl">
  <div class="card-body">
    <h1 class="card-title">{title}</h1>
    <p>{description}</p>
  </div>
  <figure>
    <a href={url}>
      <Image src={imgSrc.default} alt={title} class="rounded-lg" width="500" height="1000" quality={"max"}/>
    </a>
  </figure>
</div>
